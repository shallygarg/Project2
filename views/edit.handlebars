<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h2>Edit Post</h2>

        <div class="card">
          <div class="card-body">
            <form class="clearfix mb-4" action="POST">
              <div class="form-group">
                <label for="thread-text">Post</label>
                <input type="text" id="thread-text" class="form-control" aria-describedby="thread-text">
                {{thread.text}}
              </div>
              <div class="form-group">
                <label for="thread-description">Description</label>
                        <textarea class="form-control" id="thread-description" aria-describedby="thread-description" placeholder="Text (Optional)">{{thread.description}}</textarea>
              </div>
              <button id="submit" class="btn btn-primary float-right">Post</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>