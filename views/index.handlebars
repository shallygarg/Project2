<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">        
        <a href="/signin" class="button">Signin</a>
        <a href="/signup" class="button">Signup</a>
        <a href="/signout" class="button">Signout</a>
        {{!-- <button id = "signin" onclick=""> SignIn</button>
        <button id = "signup"> SignUp</button>
        <button id = "signout"> SignOut</button> --}}

        <h1>{{msg}}</h1>
        <h2>This is our Home Page!</h2>

        <div class="card">
          <div class="card-body">
            <form class="clearfix mb-4" action="POST">
              <div class="form-group">
                <label for="thread-text">Post</label>
                <input type="text" id="thread-text" class="form-control" aria-describedby="thread-text" placeholder="Title">
              </div>
              <div class="form-group">
                <label for="thread-description">Description</label>
                <textarea class="form-control" id="thread-description" aria-describedby="thread-description" placeholder="Text (Optional)"></textarea>
              </div>
              <button id="submit" class="btn btn-primary float-right">Post</button>
            </form>
            <form method="post" enctype="multipart/form-data">
              <input type="file" name="myimage" class="btn btn-primary float-left"/>&nbsp;&nbsp;
              <input type="submit" name="submit" class="btn btn-success" value="Upload File"/>
            </form>
          </div>
        </div>
        <div class="card">
          <div class="card-body">
            <h3>Posts:</h3>
            <ul id="thread-list" class="list-group">
              {{#each threads}}
                <li data-id="{{this.id}}" class="list-group-item">
                  <a href="thread/{{this.id}}">{{this.text}}</a>
                  <button class="btn btn-danger float-right delete">ï½˜</button>
                  <button class="btn btn-primary float-right edit">Edit</button>
                  <button class="btn btn-warning float-right like">Like</button>
                  <span class="float-right mr-5 disabled font-italic" id="count">Total Likes:</span>
                </li>
              {{/each}}
            </ul>
          </div>
        </div> 
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
